{
  "name": "jp-linker",
  "version": "1.0.0",
  "description": "游戏海外客服 AI 助手 - 截屏翻译与知识库",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "electron": "electron .",
    "start": "vite build && electron .",
